{
  "compilerOptions": {
    "target": "es2017",
    "module": "ESNext",
    "strict":true,
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "jsx": "preserve",
    "allowJs": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["src/*"],
      "@mock/*": ["mock-1/*"],
      // "@server/*": ["server/src/*"],
      "common-packages/*": ["common-packages/*"],
    },
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "./src",
    "./types",
    "mock-1",
    "./server/src/@types",
    "common-packages",
],
  "compileOnSave": false
}
